extends layout

block content
	h1.station-name= name
	each route in routes
		div.route
			div.route-picture
				div.route-map
					object(data='/svg/#{route.id}.svg', type="image/svg+xml")
				h2= route.name
			div.route-times
				each dir in route.directions
					div.direction
						h3= dir.name
						ol.times
							each time in dir.times
								li= time
